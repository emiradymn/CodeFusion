<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-danger shadow-sm">
        <div class="container">
            <a href="/posts" class="navbar-brand color-white">
                <i class="bi bi-code-slash"></i>
                <span style="font-size: 20px; color: white; font-weight: bold;">Code</span>Fusion
            </a>
            <ul class="navbar-nav ms-auto">

                <!--kullanıcı giriş durumuna göre çıkış ya da giriş seçenekleri gösterir identity nin null gelme ihtimaline karşın-->
                @if(User.Identity!.IsAuthenticated)
                {
                <li class="nav-item">
                    <a href="/posts/List" class="nav-link text-white ">Posts</a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link text-white ">@User.Identity.Name</a>
                </li>
                <li class="nav-item">
                    <a href="/users/logout" class="nav-link text-white ">Çıkış</a>
                </li>
                }else{
                <li class="nav-item">
                    <a href="/users/register" class="nav-link text-white ">Kayıt ol</a>
                </li>
                }
            </ul>
        </div>
    </nav>
    <div class="container mt-3">
        @RenderBody()

    </div>
    @RenderSection("Scripts", required: false)
</body>

</html>